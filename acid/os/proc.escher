
// ProcessIgnoreIO starts an OS process and ignores/discards its standard streams.
ProcessIgnoreIO { // Command, When, Exit
	proc os.Process
	:When = proc:When
	:Exit = proc:Exit
	:Command = proc:Command

	yio os.IO
	yio: = proc:ForkIO

	yio:When = Ignore
	yio:Stdin = io.Clunk
	yio:Stdout = io.Clunk
	yio:Stderr = io.Clunk
}

// ProcessRun ...
ProcessRun { // Command, When, Exit
	proc os.Process
	:When = proc:When
	:Exit = proc:Exit
	:Command = proc:Command

	yio os.ForkIO
	yio: = proc:IO

	yio:When = Ignore
	yio:Stdin = io.Clunk
	yio:Stdout = os.Stdout
	yio:Stderr = os.Stderr
}
